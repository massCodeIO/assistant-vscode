{
  "name": "masscode-assistant",
  "displayName": "massCode assistant",
  "description": "Fetch snippets from massCode app",
  "version": "1.1.0",
  "publisher": "AntonReshetov",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:masscode-assistant.search",
    "onCommand:masscode-assistant.create"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "masscode-assistant.search",
        "title": "massCode: Search"
      },
      {
        "command": "masscode-assistant.create",
        "title": "massCode: Create Snippet"
      }
    ],
    "configuration": {
      "title": "Search node_modules",
      "properties": {
        "masscode-assistant.notify": {
          "type": "boolean",
          "default": true,
          "description": "Show notification"
        }, 
        "masscode-assistant.host": {
          "type":"string",
          "default": "localhost",
          "description": "Specifies the host of an active massCode app"
        }
      }
    }
  },
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/massCodeIO/assistant-vscode"
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "release": "bumpp -c 'build: release v' -t",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "bumpp": "^7.1.1",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "axios": "^0.27.1",
    "strip-indent": "^4.0.0"
  }
}
